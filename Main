#pragma once

#include <iostream>
#include <sstream>
#include <string>
#include <algorithm>



namespace Transfer
{
	const std::string IpAdress = "-IPADRESS";
	const std::string FileName= "-FILENAME";

	enum Type {IPADRESS, FILENAME, NONE};

	struct TransferRequest
	{
		std::string ipAdress;
		std::string fileName;
	};

	struct Parameter
	{
		Type type;
		std::string value;
	};

	TransferRequest getTransferRequest(std::istream* input, std::ostream* output);
	TransferRequest getTransferRequest(char** input, size_t length);

	bool isEmpty(Transfer::TransferRequest request);
	Parameter convertToParameter(std::string input);
	
}


